
@inject NavigationManager NavigationManager

@code {
    private string CurrentPageUrl => NavigationManager.Uri;

    private bool IsCurrentPage(string url) => CurrentPageUrl.Contains(url);
}

<ul class="nav">
    <li class="nav-item">
        <a class="nav-link @(IsCurrentPage("/") ? "active" : "")" href="/">Home</a>
        @if (IsCurrentPage("/"))
        {
            <span class="indicator"></span>
        }
    </li>
    <li class="nav-item">
        <a class="nav-link @(IsCurrentPage("/materials") ? "active" : "")" href="/materials">Material List</a>
        @if (IsCurrentPage("/materials"))
        {
            <span class="indicator"></span>
        }
    </li>
    <li class="nav-item">
        <a class="nav-link @(IsCurrentPage("/edit-material") ? "active" : "")" href="/edit-material">Create Material</a>
        @if (IsCurrentPage("/edit-material"))
        {
            <span class="indicator"></span>
        }
       </li>

</ul>

<style>
    .nav {
        list-style-type: none;
        padding: 0;
        margin: 0;
        background-color: #333;
        overflow: hidden;
    }

    .nav-item {
        position: relative;
        float: left;
    }

        .nav-item a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            .nav-item a:hover {
                background-color: #ddd;
                color: black;
            }

            .nav-item a.active {
                background-color: #555;
            }

    .indicator {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background-color: #ffeb3b; 
    }
</style>
